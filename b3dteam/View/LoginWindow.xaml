<Window x:Class="b3dteam.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:b3dteam.View"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="500">
    
    <Grid>
        <Label Margin="10">Before using this tool, you have to login.</Label>

        <Frame Name="frame_Center"
               NavigationUIVisibility="Hidden"
               Margin="0,40,0,0"/>
        
        <Button Width="100" 
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Name="button_Login"
                Click="button_Login_Click"
                Margin="0,-40,0,0">Login</Button>
        
        <Button Width="100" 
                Height="30" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Name="button_Register"
                Click="button_Register_Click"
                Margin="0,40,0,0">Register</Button>
        
    </Grid>
    
</Window>
